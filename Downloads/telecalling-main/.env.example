APP_NAME=Telecalling
APP_ENV=production
APP_KEY=base64:hP6SQNJ6572y2g6EgWbL2aB1Zm0o8lF8Z/EG1KGhhQI=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://telecalling-production.up.railway.app

APP_LOCALE=en
